<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Invoice</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 40px;
      color: #333;
    }
    h1 {
      color: #007bff;
    }
    .invoice {
      border: 1px solid #ccc;
      border-radius: 10px;
      padding: 20px;
    }
    .item {
      display: flex;
      justify-content: space-between;
      padding: 6px 0;
    }
    .total {
      margin-top: 15px;
      font-weight: bold;
      font-size: 1.1rem;
    }
  </style>
</head>
<body>
  <h1>Invoice</h1>
  <div class="invoice">
    <p><strong>Customer:</strong> <%= customer %></p>
    <p><strong>Date:</strong> <%= date %></p>

    <hr>

    <% items.forEach(item => { %>
      <div class="item">
        <span><%= item.name %></span>
        <span>$<%= item.price.toFixed(2) %></span>
      </div>
    <% }) %>

    <div class="total">
      Total: $<%= total.toFixed(2) %>
    </div>
  </div>
</body>
</html>
